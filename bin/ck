#!/usr/bin/env python3
import argparse
from customkey.hotkey import CustomHotkey
from customkey.hotkey import Fzf
import time
import sys

if __name__ == "__main__":

    parser = argparse.ArgumentParser(
        description="Customhotkey.."
    )
    parser.add_argument("--debug", action="store_true", help="Turn on Debug Mode")


    subparser = parser.add_subparsers(
        "--init",
        dest="action",
        title='Run CustmKey',
        help="Run CustomKey",

    )
    subparser = parser.add_subparsers(
        "--run",
        dest="action",
        title='Run CustmKey',
        help="Run CustomKey",

    )

    subparser.add_argument(
        "--user",
        title='Specify user for config file',
        default=None,
    )

    subparser = parser.add_subparsers(
        "--edit",
        dest="action",
        help="Edit custom hotkey config",
    )

    args = parser.parse_args()

    fzf = Fzf()

    if args.debug:
        pass

    if args.action == 'run':
        app = CustomHotkey(args.user)
        while True:
            try:
                app.enter_loop()
            except OSError:
                time.sleep(15)
                pass
    if args.action == 'init':
        hk = CustomHotkey()
        try:
            hk.setup()
        except KeyboardInterrupt:
            sys.exit(0)
        sys.exit(0)

    if args.action == 'edit':
        hk = CustomHotkey()
        hk.edit_config()

    function = fzf.prompt(
        ["execute_cmd",
         "edit_config"],
        "--cycle --reverse --header=Choose function to use",
    )
    if "execute_cmd" in function:
        pass
    if "edit_config" in function:
        hk = CustomHotkey()
        hk.edit_config()
