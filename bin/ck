#!/usr/bin/env python3
import argparse
from customhotkey.hotkey import CustomHotkey
from customhotkey.hotkey import Fzf
import time


if __name__ == "__main__":

    parser = argparse.ArgumentParser(
        description="Customhotkey.."
    )
    parser.add_argument("--debug", action="store_true", help="Turn on Debug Mode")
    parser.add_argument(
        "--init",
        action="store_true",
        help="Initialize Customhotkey with dummy config file",
        default=None,
    )
    parser.add_argument(
        "--remove",
        action="store_true",
        help="Remove Key from config file",
        default=None,
    )

    parser.add_argument(
        "--edit",
        action="store_true",
        help="Edit ck config",
    )
    parser.add_argument(
        "--run",
        action="store_true",
        help="Run custom hotkey",
    )

    args = parser.parse_args()

    fzf = Fzf()
    hk = CustomHotkey()

    if args.debug:
        pass

    if args.run:
        app = CustomHotkey()
        while True:
            try:
                app.enter_loop()
            except OSError:
                time.sleep(15)
                pass

    if args.edit:
        hk.edit_config()
        
    function = fzf.prompt(
        [
            "build",
            "remove",
            "edit_config"
        ],
        "--cycle --reverse --header=Choose function to use",
    )
    if "build" in function:
        pass
    if "remove" in function:
        pass
    if "edit_config" in function:
        hk.edit_config()
