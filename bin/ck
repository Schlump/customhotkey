#!/usr/bin/env python3
import argparse
from customkey.hotkey import CustomHotkey
from customkey.hotkey import Fzf
import time
import sys

if __name__ == "__main__":

    parser = argparse.ArgumentParser(
        description="Customhotkey.."
    )
    parser.add_argument("--debug", action="store_true", help="Turn on Debug Mode")

    subparsers = parser.add_subparsers(
        help="",
        dest="action",
        title="Action"

    )
    subparser = subparsers.add_parser(
        "init",
        help="Run CustomKey"

    )
    subparser = subparsers.add_parser(
        "run",
        help="Run CustomKey"
    )

    subparser.add_argument(
        "--user",
        help='Specify user for config file',
        default=None,
    )

    subparser = subparsers.add_parser(
        "edit",
        help="Edit custom hotkey config",
    )

    args = parser.parse_args()

    fzf = Fzf()

    if args.debug:
        pass

    if args.action == 'run':
        app = CustomHotkey(args.user)
        while True:
            try:
                app.enter_loop()
            except OSError:
                time.sleep(15)
                pass
    if args.action == 'init':
        hk = CustomHotkey()
        try:
            hk.setup()
        except KeyboardInterrupt:
            sys.exit(0)
        sys.exit(0)

    if args.action == 'edit':
        hk = CustomHotkey()
        hk.edit_config()

    function = fzf.prompt(
        ["execute cmd",
         "edit config",
         "init"],
        "--cycle --reverse --header=Choose function to use",
    )
    if "execute cmd" in function:
        hk = CustomHotkey()
        hk.execute_command()

    if "init" in function:
        hk = CustomHotkey()
        hk.setup()
        sys.exit(0)

    if "edit config" in function:
        hk = CustomHotkey()
        hk.edit_config()
